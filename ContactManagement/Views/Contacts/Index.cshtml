

@model ContactManagement.Domain.Contact


@{
    ViewBag.Title = "";
}




<div class="box">

    <div class="box-header">
        <h3 class="box-title">My Contact: @ViewBag.total</h3>
    </div>

    <div class="box-body">
        <div class="col-md-12">
            <button type="button" class="btn btn-primary pull-right" onclick="openContact(0)">
                Create New Contact
            </button> 
        </div>
        
        <p>&nbsp;</p>
        <table id="ContactListTable" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>

    </div>

</div>

<div class="modal fade" id="ContactModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="ContactModalTitle">Add New Contact</h4>
            </div>
            <div class="modal-body">
                <div id="ContactModalPartial">




                </div>
            </div>
        </div>
        <!--/.modal-content-->
    </div>
    <!--/.modal-dialog-->
</div>


<div class="modal fade" id="deleteContact">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="ContactDeleteNodalTitle">Delete Contact</h4>
            </div>
            <div class="modal-body">
                <div id="ContactDeleteModalPartial">


                </div>
            </div>
        </div>
        <!--/.modal-content-->
    </div>
    <!--/.modal-dialog-->
</div>

@section Scripts{

    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css" />

    <!-- Data table -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.10/css/dataTables.bootstrap.min.css " />
    <script src="https://cdn.datatables.net/1.10.10/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <script src="https://cdn.datatables.net/1.10.10/js/dataTables.bootstrap.min.js" type="text/javascript"></script>

    <script>

        function openContact(id) {

            var url;

            if (id != 0) {
                url = "/Contacts/Edit?id=" + id;
                $("#ContactModalTitle").html("Update Contact");
            } else {
                url = "/Contacts/Create/";
                $("#ContactModalTitle").html("New Contact");
            }

            $("#ContactModal").modal();
            $.ajax({
                type: "GET",
                url: url,
                success: function (data) {
                    $("#ContactModalPartial").html(data);
                }
            });
        }

        function deleteContact(id) {

            var url = "/Contacts/Delete?id=" + id;

            if (id != 0) {
                $("#ContactDeleteNodalTitle").html("Delete Contact");
            }

            $("#deleteContact").modal();
            $.ajax({
                type: "GET",
                url: url,
                success: function (data) {
                    $("#ContactDeleteModalPartial").html(data);
                }
            })
        }
        
        $(document).ready(function () {
            var oTable = $('#ContactListTable').DataTable({
                "ajax": {
                    "url": '/Contacts/LoadContactData/',
                    "type": "get",
                    "datatype": "json"
                },

                "columns": [
                    {
                        "data": null, "autowidth": true,
                        "render": function (data) {
                            return '<a href="/Contacts/Details/' + data.ContactID + '"> ' + data.Name + ' </a>';
                        }
                    },
                    {
                        "data": null, "width": "50px",
                        "render": function (data) {
                            return '<a data-toggle="modal" class="glyphicon glyphicon-edit" onclick="openContact(' + data.ContactID + ')"></a>';
                        }
                    },
                    {
                        "data": null, "width": "50px",
                        "render": function (data) {
                            return '<a data-toggle="modal" class="glyphicon glyphicon-floppy-remove" onclick="deleteContact(' + data.ContactID + ')"></a>';
                        }
                    }
                ]
            });
        });

</script>

}

