@model ContactManagement.Domain.Contact

<!-- Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Delete Contact</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete @Model.Name's contact
            </div>
            <div class="modal-footer" id="CategoryID">
                @using (Html.BeginForm("Delete", "Contact", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.Hidden("ContactID", new { id = "ContactID" })
                    <div class="form-actions no-color">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        @*@Html.ActionLink("Delete", "Delete", new { id = Model.CategoryID }, new { @class="btn btn-danger" })*@
                        <input type="submit" value="Delete" class="btn btn-danger" id="ContactID" />
                    </div>
                }
                @*<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <input type="submit" value="Delete" class="btn btn-danger" />*@
            </div>
        </div>
    </div>
</div>
